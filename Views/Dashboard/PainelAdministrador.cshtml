@{
    TempData["LinkSessao"] = "";
    TempData["Sessao"] = "Painel";
    TempData["Pagina"] = "Administrador";
    ViewData["Title"] = "Painel";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-1">
                <a href="~/Dashboard/BewertungZurucksetzen" onclick="return confirm('Tem certeza que deseja resetar o ranking?');">
                    <div class="info-box mb-3" style="justify-content: center;background-color: transparent;box-shadow: unset;">
                        <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-redo-alt"></i></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <form id="login-form">
        <label for="usuario-id">ID do Usuário:</label>
        <input type="text" id="usuario-id" name="usuario-id">
        <input type="submit" value="Login como Usuário">
    </form>
    <script>
        document.getElementById("login-form").addEventListener("submit", function (event) {
            event.preventDefault();
            var usuarioId = document.getElementById("usuario-id").value;
            if (usuarioId) {
                window.location.href = "/login-administrador-como-usuario/" + usuarioId;
            } else {
                alert("Por favor, insira o ID do usuário");
            }
        });
    </script>    
</section>
