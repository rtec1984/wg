@using ProjectAmaterasu.Extensions
@model UsuarioViewModels;
@{
    TempData["LinkSessao"] = "";
    TempData["Sessao"] = "Painel";
    TempData["Pagina"] = "Painel";
    ViewData["Title"] = "Painel";
}
<section class="content">
     @if (User.Identity.GetTema() == "1")
    {
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="info-box">
                        <span class="info-box-icon bg-gradient-navy elevation-1"><i class="fas fa-trophy"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Posição no Ranking</span>
                            <span class="info-box-number">
                                @if (Model == null)
                                {
                                    @Html.Raw("0")
                                    ;
                                }
                                else
                                {
                                    string str = Model.Posicao + "º";
                                    @str
                                    ;
                                }
                            </span>
                        </div>
                    </div>
                </div>
                <div class="clearfix hidden-md-up"></div>
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="info-box mb-3">
                        <span class="info-box-icon bg-gradient-navy elevation-1"><i class="fas fa-star"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Pontuação</span>
                            <span class="info-box-number">
                                @if (Model == null)
                                {
                                    @Html.Raw("0")
                                    ;
                                }
                                else
                                {
                                    @Model.Pontuacao
                                }
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="info-box mb-3">
                        <span class="info-box-icon bg-gradient-navy elevation-1"><i class="fas fa-dice"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Jogos</span>
                            <span class="info-box-number">
                                @if (Model == null)
                                {
                                    @Html.Raw("0")
                                    ;
                                }
                                else
                                {
                                    int j = (@Model.Vitorias + @Model.Derrotas);
                                    @j
                                    ;
                                }
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="info-box mb-3">
                        <span class="info-box-icon bg-gradient-navy elevation-1"><i class="fas fa-check"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Vitórias</span>
                            <span class="info-box-number">
                                @if (Model == null)
                                {
                                    @Html.Raw("0")
