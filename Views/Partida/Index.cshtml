@using ProjectAmaterasu.Extensions
@model List<PartidaModels>
@{
    TempData["LinkSessao"] = "";
    TempData["Sessao"] = "Lista de Partidas";
    TempData["Pagina"] = "Partidas";
    ViewData["Title"] = "Lista de Partidas";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="card card-success collapsed-card">
                        <div class="card-header" style="background-color: #343a40;">
                            <h3 class="card-title">Partida @item.Id - @item.Data.ToString("dd/MM/yyyy")<br>Duração: @Html.Raw(item.Duracao +" minutos")</h3>
                            <div class="card-tools">
                                @if (item.Id_Usuario == User.Identity.GetSessionID() && item.Data.AddDays(2) >= DateTime.Now)
                                {
                                    <a href="~/deletar-partida/@item.Id"  onclick="return confirm('Tem certeza que deseja deletar a partida?');">
                                        <i class="bi bi-x-circle"></i>
                                    </a>
                                    <a href="~/alterar-partida/@item.Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                }
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body" style="display: none;">
                            <p style="color: green; margin-bottom: 2px!important;"><i class="bi bi-check-circle-fill"></i> @Html.Raw(item.Nome)</p>
                            <p style="color: red; margin-bottom: 2px!important;"><i class="bi bi-x-circle-fill"></i> @Html.Raw(item.Nome_2)</p>
                            <p style="color: red; margin-bottom: 2px!important;"><i class="bi bi-x-circle-fill"></i> @Html.Raw(item.Nome_3)</p>
                            @if (!String.IsNullOrEmpty(item.Nome_4))
                            {
                                <p style="color: red; margin-bottom: 2px!important;"><i class="bi bi-x-circle-fill"></i> @Html.Raw(item.Nome_4)</p>
                            }
                            @if (!String.IsNullOrEmpty(item.Nome_5))
                            {
                                <p style="color: red; margin-bottom: 2px!important;"><i class="bi bi-x-circle-fill"></i> @Html.Raw(item.Nome_5)</p>
                            }
                            @if (!String.IsNullOrEmpty(item.Nome_6))
                            {
                                <p style="color: red; margin-bottom: 2px!important;"><i class="bi bi-x-circle-fill"></i> @Html.Raw(item.Nome_6)</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
