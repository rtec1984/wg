@using ProjectAmaterasu.Extensions

@{
    TempData["LinkSessao"] = "";
    TempData["Sessao"] = "Ranking";
    TempData["Pagina"] = "Ranking";
    ViewData["Title"] = "Ranking";
}
<section class="content">
    @if (User.Identity.GetTema() == "1")
    {
        <style>
            table.dataTable tbody tr {
                text-align: center !important;
            }

            table.dataTable thead .sorting,
            table.dataTable thead .sorting_asc,
            table.dataTable thead .sorting_desc {
                background: none !important;
                text-align: center !important;
            }

            div.dt-buttons {
                float: left !important;
            }

            .content-header {
                padding: 5px !important;
            }
        </style>
    <div class="container-fluid">
        <div>
            <div class="container">
                <div id="grid">
                    <table class="table table-bordered table-striped" id="ranking">
                        <thead>
                            <tr>
                                <th scope="col" aria-label="#" class="sorting_disabled" rowspan="1" colspan="1" style="display: flex;justify-content: center;">#</th>
                                <th scope="col">Nome</th>
                                <th scope="col">P</th>
                                <th scope="col">J</th>
                                <th scope="col">V</th>
                                <th scope="col">%</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    }
    else if (User.Identity.GetTema() == "2" || User.Identity.GetTema() == "3")
    {
        <style>
            table.dataTable tbody tr {
                text-align: center !important;
                color: white !important;
                background-color: #212529;
            }
            table.dataTable thead .sorting,
            table.dataTable thead .sorting_asc,
            table.dataTable thead .sorting_desc {
                background: none !important;
                text-align: center !important;
            }
            button.dt-button:first-child, div.dt-button:first-child, a.dt-button:first-child, input.dt-button:first-child {
                margin-left: 0;
                float: left !important;
            }
            .content-header {
                padding: 5px !important;
            }
            .paginate_button.disabled, .dataTables_wrapper .dataTables_length, .dataTables_paginate, button.dt-button, div.dt-button, a.dt-button, input.dt-button, .paginate_button.current, .dataTables_filter, .dataTables_info, .dataTables_processing {
                color: unset !important;
            }
        </style>
        <div class="container-fluid">
            <div>
                <div class="container">
                        <table class="table table-bordered table-striped table-dark" id="ranking">
                            <thead>
                                <tr>
                                    <th scope="col" aria-label="#" class="sorting_disabled" rowspan="1" colspan="1" style="display: flex;justify-content: center;">#</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">P</th>
                                    <th scope="col">J</th>
                                    <th scope="col">V</th>
                                    <th scope="col">%</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
    }
</section>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        var table = $('#ranking').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.13.1/i18n/pt-BR.json'
            },
            dom: 'Bfrltip',
            pageLength: 10,
            lengthMenu: [[3, 5, 10, -1], [3, 5, 10, "Todos"]],
            ajax: "@Html.Raw("./Ranking/getRankings")",
            buttons: [
            {
                    extend: 'pdfHtml5',
                    //title: '',
                    pageSize: 'B7',
                    messageBottom: function () { return "\n" + "Em " + new Date().toLocaleDateString() + " às " + new Date().toLocaleTimeString() },
                    exportOptions: {
            modifier:       {
                    page: 'current'
            }
            }
            }
            ],
            order: [[2, 'desc'], [5, 'desc'], [4, 'desc'], [3, 'asc'], [1, 'asc']],
            columnDefs: [
            {
                orderable: false,
                targets: [0, 1, 2, 3, 4, 5],
            },
            ],
            columns: [
                {
                  "data": "",
                  "defaultContent": ""
                },
                { data: 'nome' },
                { data: 'pontuacao' },
                { data: 'jogos' },
                { data: 'vitorias' },
                {
                    data: null,
                    className: 'options',
                    render: function (data, type, full, meta) {
                        return ((data.vitorias / (data.vitorias + data.derrotas)) * 100).toFixed(0);
                    }
                }
            ],
        });

        table.on('order.dt', function () {
            let e = 1; 
            table.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                this.data(e++);
            });
        }).draw();
    });
</script>
